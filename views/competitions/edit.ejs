<%- include('../partials/header.ejs'); %>
<div class="container">
    <div class="row">
        <div class="col text-center"><h1 style="text-align: center">Edit Competition</h1></div>
    </div>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/competitions/<%= competition._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="competition[name]" value="<%= competition.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="competition[image]" value="<%= competition.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="competition[description]" value="<%= competition.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="competition[data]" value="<%= competition.data %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="competition[conclusion]" value="<%= competition.conclusion %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-dark btn-block">Submit!</button>
                </div>
            </form>
            <a href="/competitions/<%=competition._id%>">Go Back</a>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs'); %>

<%- include('../partials/header.ejs'); %>
<div class="container">
    <div class="row">
        <div class="col text-center"><h1 style="text-align: center">Create a New Competition</h1></div>
    </div>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/competitions" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="data" placeholder="data">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="conclusion" placeholder="conclusion">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-dark btn-block">Submit!</button>
                </div>
            </form>
            <a href="/competitions">Go Back</a>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs'); %>
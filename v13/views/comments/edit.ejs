<%- include('../partials/header.ejs'); %>
<div class="container">
    <div class="row">
        <div class="col text-center"><h1 style="text-align: center">Edit the comment</h1></div>
    </div>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/competitions/<%= competition_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-secondary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/competitions/<%= competition_id %>">Go Back</a>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs'); %>